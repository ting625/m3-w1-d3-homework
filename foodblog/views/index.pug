extends layout

block content
  aside#photos.mt-5.ml-3
    img(src=mainimage alt="White Chicken Chili" width="180")
  h2
    blogtitle
  section#blogposts.w-auto.p-0.m-0
    ul
      li#posts(v-for="post in posts" :key="post.name")
        span.profile
          img(:src="post.profilepic", @click="authorinfo(posts, post)")
        span.author {{ post.name }} —
        span.date {{ post.date }}
        span.reply {{ post.reply }}
        p {{ post.message }}

        div#w-auto.m-0(v-if="post.thisBox")
          p.closeBtn.closeBtnP(@click="post.thisBox = false") ×
          div#info_title {{ post.name }}
          div#info_foodie Foodie Level: {{ post.foodielevel }}
          div#info_bio Bio: {{ post.bio }}
          button.closeBtn.closeBtnB(@click="post.thisBox = false") Close
          p#close_info