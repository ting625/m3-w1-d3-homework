extends layout

block content
  aside#photos.mt-5.ml-3
    img(src=mainimage alt="White Chicken Chili" width="180")
  h2
    blogtitle
  section#blogposts.w-auto.p-0.m-0
    ul
      each post in posts
        li#posts
          span.profile
            img(src=post.profilepic @click="authorinfo(posts, post)")
          span.author #{post.name} â€”
          span.date #{post.date}
          span.reply #{post.reply}
          p #{post.message}
        if post.thisBox
          #info_box.w-auto.m-0
            p.closeBtn.closeBtnP(@click="$emit('close', post.thisBox = false)") &#10006;
            #info_title #{post.name}
            #info_foodie
              span Foodie Level: #{post.foodielevel}
            #info_bio
              span Bio:
              br
              | #{post.bio}
            button.closeBtn.closeBtnB(@click="$emit('close', post.thisBox = false)") Close
            p#close_info
